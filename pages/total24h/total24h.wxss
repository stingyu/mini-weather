/* pages/total24h/total24h.wxss */
.time-line {
  background-color: #fff;
  width: 100%;
  padding:30rpx 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 25rpx;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.icon-map {
  width:60rpx;
  height:60rpx;
}
.item {
  position:relative;
  margin-bottom: 60rpx;
}
.item-info {
  position: absolute;
  width:200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  top:-40rpx;
}
text {
  display: block;
  height:50rpx;
  line-height:50rpx;
  font-size: 28rpx;
  color:#999;
}
.item-time {
  background-color: #f3b13c;
  width: 125rpx;
  height:125rpx;
  color:#fff;
  font-size: 28rpx;
  border-radius:50%;
  text-align:center;
  line-height: 120rpx;
  position: relative;
  z-index:2;
}
.item-time::after {
  content:'';
  display:block;
  height:90rpx;
  position: absolute;
  border-right:1rpx solid #999;
  left:50%;
  z-index:1;
}
.item:last-child>.item-time::after{
  display: none;

}
.item:nth-child(even)>.item-info {
  left:148rpx;
}
.item:nth-child(2n+1)>.item-info{ 
  left:-240rpx;
}
.icon {
  width:90rpx;
  height: 90rpx;
}