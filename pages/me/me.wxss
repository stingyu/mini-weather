/* pages/me/me.wxss */
.me-page {
  height: 100vh;
}
.btn-chat {
  width:100%;
  display:flex;
  flex-direction:row;
  align-items:center;
  position:static;
  margin-left:0;
  padding-left:0;
  margin-right:0;
  padding-right:0;
  font-size:28rpx;
  line-height:85rpx;
  color:rgb(33,33,33);
  background-color: #fff;
  border:none;
  border-radius:0;
}
.app-intro {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width:100%;
  border-radius: 10rpx;
  padding-top: 40rpx;
  padding-bottom:30rpx;
}
.logo {
  width: 180rpx;
  height:180rpx;
  border-radius: 50%;
}
.name {
  font-size: 42rpx;
  font-weight: 400;
  color:rgb(33,33,33);
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
.descri {
  font-size: 28rpx;
  color:#999;
  width:95%;
  text-align: left;
}
.menu-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  margin-top:18rpx;
  background-color: #fff;
  padding-top: 25rpx;
  padding-bottom:25rpx;
  border-radius: 10rpx;
}
.item-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  width:85%;
  height:85rpx;
  line-height: 85rpx;
  margin-left:30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #ccc;
  font-size:30rpx;
  color: rgb(33,33,33);

}
.item-icon {
  width: 40rpx;
  height: 40rpx;
}
.arrow {
  width: 30rpx;
  height: 30rpx;
}
.option {
  flex: 1;
  text-align: left;
  margin-left:20rpx;
}
.btn {
  width:80%;
  height:94rpx;
  border-radius:15rpx;
}
.btn-query {
  background-color: #f3b13c;
  color: #fff;
  margin-top:35rpx;
  margin-bottom: 20rpx;
}
.btn-send {
  color:rgb(33,33,33);
  border:1rpx solid rgb(33,33,33);
}
