/* pages/totalWeather/totalWeather.wxss */
.section {
  background-color: #fff;
  color:rgb(33,33,33);
  width: 100%;
  height:100%;
}
.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 25rpx;
}
.current {
  font-size: 32rpx;
}
.icon-map {
  width:60rpx;
  height:60rpx;
}
.main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width:45%;
  text-align: center;
  border: 1rpx dotted #ccc;
  margin-bottom: 30rpx;
  padding: 15rpx 0;
}
text {
  display:inline-block;
  width:100%;
  color:#999;
  height:35rpx;
  line-height: 35rpx;
  font-size: 26rpx;

}
.icon-weather {
  width:90rpx;
  height: 90rpx;
}